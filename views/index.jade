extends layout

block content

  body(style = 'background-image: url(https://misadventuresmag.com/wp-content/uploads/2014/02/badlands-south-unit-sunrise.jpg);background-size: cover')
    .countryselect
      input#countrysearch(type='text', placeholder='Enter a country or city')
      input.btn#searchbutton(type='submit',name='submit',value='Search')
      input.btn#savedshow(type='submit',name='submit',value='Show landmarks')
    #map
    #countrypic
      #countryinfo
        h2#title1.infotitle
        input.btn.save(type='submit',name='submit',value='Save')
      #savedplaces
        #displaysaved
        input.btn#savedclose(type='submit',name='submit',value='Close')
      script(src='/javascripts/googleapi.js')
      script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBGT9DtN2cOFyQW8CY5GD7cHYbeWsBoox8&callback=initMap')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
